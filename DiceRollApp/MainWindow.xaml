<!--
    Expect this to change frequently and have lots of weird things going on.
    I do a lot of testing/fiddling in the XAML.
-->
    <Window x:Class="DiceRollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceRollApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Background="Black">
    <Grid Margin="6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Name="grdSettings">
            <Button Name="btnTest"
                    Content="TEST"
                    Height="25"
                    Width="50"
                    Click="BtnTest_Click"/>
        </Grid>
        <Grid Name="grdIcons"
              Grid.Column="2" 
              Background="#4c3d1e">
            <!--Column/Row Definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*" x:Name="rwdefTopRow"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*" x:Name="rwdefMidRow"/>
                <RowDefinition Height="3"/>
                <RowDefinition Height="*" x:Name="rwdefBotRow"/>
                <RowDefinition Height="3"/>
            </Grid.RowDefinitions>
            
        </Grid>
        <Grid Name="grdRollHistory"
              Grid.Column="4">
            <ScrollViewer>
                <TextBlock Name="tblkRollHistory"
                     Background="DarkGray"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
