<!--
    Expect this to change frequently and have lots of weird things going on.
    I do a lot of testing/fiddling in the XAML.
-->
<Window x:Class="DiceRollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiceRollApp"
        mc:Ignorable="d"
        Title=""
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Height="533"
        Width="800"
        ResizeMode="NoResize">
    <Window.Background>
        <VisualBrush TileMode="Tile" Viewport="0,0,1,1">
            <VisualBrush.Visual>
                <Image Source="Resources/background.jpg"/>
            </VisualBrush.Visual>
        </VisualBrush>
    </Window.Background>
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--<Image Source="Resources/paper.png"
                   Grid.ColumnSpan="2" 
                   HorizontalAlignment="Left" 
                   VerticalAlignment="Top" 
                   Width="256" Stretch="None" Height="256" IsEnabled="False">
            </Image>-->
            <Grid Name="grdSettings">
                <!--Background="#333333">-->
                <Button Name="btnTest"
                        Content="TEST"
                        Height="25"
                        Width="50"
                        Click="BtnTest_Click"/>
            </Grid>
            <Grid Name="grdIcons"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Label Name="lbNumDice"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Content="Number of Dice:"
                       FontFamily="Old English Text MT"
                       FontSize="22"/>
                <Label Name="lbDiceSides"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       Content="Number of Sides:"
                       FontFamily="Old English Text MT"
                       FontSize="22"/>
                <Label Name="lbModifier"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       Content="Modifier:"
                       FontFamily="Old English Text MT"
                       FontSize="22"/>
                <Label Name="lbOutcome"
                       Grid.Row="4"
                       VerticalAlignment="Center"
                       Content="Outcome:"
                       FontFamily="Old English Text MT"
                       FontSize="22"/>
            </Grid>
            <Grid Name="grdRollHistory"
                  Grid.Column="2">
                <ScrollViewer>
                    <TextBlock Name="tblkRollHistory"/>
                </ScrollViewer>
            </Grid>
        </Grid>

    </Grid>
</Window>
